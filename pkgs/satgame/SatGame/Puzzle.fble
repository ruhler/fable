
@ Bool@ = /Core/Bool%.Bool@;

@ Int@ = /Core/Int%.Int@;

<@>@ List@ = /Core/List%.List@;

@ Var_@ = /Core/Int%.Int@;

@ Literal@ = *(Var_@ var, Bool@ pos);
@ Clause@ = List@<Literal@>;
@ Puzzle@ = List@<Clause@>;

# Parameters describing the shape and size of a puzzle.
@ Params@ = *(
  Int@ num_vars,
  Int@ num_clauses,
  Int@ num_literals_per_clause
);

@(Var_@, Literal@, Clause@, Puzzle@, Params@);
