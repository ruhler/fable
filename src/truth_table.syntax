
// AND: Z is 1 if both A and B are 1.
TruthTable(A, B; Z) {
  00: 0;
  01: 0;
  10: 0;
  11: 1;
}

// XOR: Z is 1 if exactly one of A or B is 1.
TruthTable(A, B; Z) {
  00: 0;
  01: 1;
  10: 1;
  11: 0;
}

// Full Adder.
//  Z is the sum of A, B, and Cin.
//  Cout is the carry out.
TruthTable(A, B, Cin; Z, Cout) {
  000: 00;
  001: 10;
  010: 10;
  011: 01;
  100: 10;
  101: 01;
  110: 01;
  111: 11;
}
  
