
{ Unit%; @(Unit@); };
{ Bool%; @(Bool@, True); };
{ Maybe%; @(Maybe@); };
{ Process%; @(Get@, Put@); };
{ String%; @(Str@); };

# The 'cat' program to cat stdin.
(Get@<Maybe@<Str@>>, Put@<Str@>){ Bool@!; }
Cat = (Get@<Maybe@<Str@>> stdin, Put@<Str@> stdout) {
  Maybe@<Str@> line := stdin;
  ?(line;
      just: {
        Unit@ _ := stdout(line.just);
        Cat(stdin, stdout);
      },
      nothing: $(True));
};

Cat;
