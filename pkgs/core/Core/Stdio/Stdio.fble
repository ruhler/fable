
<<@>@>@ Monad@ = /Core/Monad%.Monad@;
<<@>@>@ Stdio@ = /Core/Stdio%.Stdio@;

<<@>@>@ IStream@ = /Core/Stream%.IStream@;
<<@>@>@ OStream@ = /Core/Stream%.OStream@;


<<@>@ M@>(Monad@<M@> m, Stdio@<M@> stdio) {

  IStream@<M@> Stdin = stdio.%.in;
  OStream@<M@> Stdout = stdio.%.out;
  OStream@<M@> Stderr = stdio.%.err;

  @(Stdin, Stdout, Stderr);
};
