
@ Bool@ = /Bool%.Bool@;
% False = /Bool%.False;

<@>@ List@ = /List%.List@;
<@>% List = /List%.List;

@ Stdio@ = /Stdio%.Stdio@;
@ IO@ = /Stdio%.IO@;

@ String@ = /String%.String@;
% Str = /String%.Str;

@ Test@ = /Test%.Test@;
% TestSuite = /Test%.TestSuite;

# Import to test compilation.
% _ = /Char/Show%;
% _ = /Fble/Bench%;
% _ = /Fble/ProfilesTest%;
% _ = /Fble/StackSmasher%;
% _ = /Graphics/App%;
% _ = /Invaders/App%;
% _ = /Invaders/Bench%;
% _ = /Invaders/Screenshot/App%;
% _ = /LFSR%;
% _ = /Snake%;
% _ = /Snake/Bench%;
% _ = /Stdio/Cat%;
% _ = /Stdio/Test%;

Test@ AllTests = TestSuite(Str|Fble, List<Test@>[
  /Bool/Tests%.Tests,
  /BenchmarkGame/Tests%.Tests,
  /Digits/Tests%.Tests,
  /GameOfLife/Tests%.Tests,
  /Graphics/2D/Tests%.Tests,
  /Graphics/Triangle/Tests%.Tests,
  /Hwdg/Tests%.Tests,
  /Int/Int/Tests%.Tests,
  /List/Tests%.Tests,
  /Map/Tests%.Tests,
  /Maybe/Tests%.Tests,
  /Md5/Tests%.Tests,
  /Sat/Tests%.Tests,
  /String/Tests%.Tests,
  /Sudoku/Tests%.Tests,
  /Test/Tests%.Tests,
  /TicTacToe/Tests%.Tests
]);

Stdio@ Main = (IO@ io, List@<String@> args) {
  Bool@ verbose = args.?(
    cons: /String/Eq%.Eq(Str|'--verbose', args.cons.head),
    nil: False);

  verbose.?(
    true: /Test%.RunTestsVerbose(io.stdout, AllTests),
    false: /Test%.RunTests(io.stdout, AllTests));
};

Main;
