
% True = /Core/Bool%.True;

<@>@ List@ = /Core/List%.List@;

<@>@ Maybe@ = /Core/Maybe%.Maybe@;

<<@>@>@ Monad@ = /Core/Monad%.Monad@;

<<@>@>@ Stdio@ = /Core/Stdio%.Stdio@;
<<@>@>@ Main@ = /Core/Stdio%.Main@;

@ String@ = /Core/String%.String@;

@ Unit@ = /Core/Unit%.Unit@;

# The 'cat' program to cat stdin.
Main@ Cat = <<@>@ M@>(Monad@<M@> m, Stdio@<M@> stdio, List@<String@> args) {
  Maybe@<String@> line <- m.do(stdio.in);
  line.?(
    just: {
      Unit@ _ <- m.do(stdio.out(line.just));
      Cat(m, stdio, args);
    },
    nothing: m.return(True)
  );
};

/Core/IO/Stdio%.IOStdio(Cat);
