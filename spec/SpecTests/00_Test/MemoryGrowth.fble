# @@fble-test@@ memory-growth
#
# Test memory-growth test infrastructure.

@ Unit@ = *();
@ Nat@ = /SpecTests/Nat%.Nat@;
@ S@ = /SpecTests/Nat%.S@;
% S = /SpecTests/Nat%.S;

@ Sum@ = +(Sum@ S, Unit@ Z);

(Nat@, Sum@){ Sum@; } add = (Nat@ n, Sum@ sum) {
  S@ s = S(n);
  s.?(Z: sum, S: add(s.S, Sum@(S: sum)));
};

# f requires O(N) memory.
(Nat@){ Sum@; } f = (Nat@ n) {
  add(n, Sum@(Z: Unit@()));
};

f;
