# @@fble-test@@ memory-growth
#
# Test memory-growth test infra for processes.
@ Unit@ = *();
@ Nat@ = /SpecTests/Nat%.Nat@;
@ S@ = /SpecTests/Nat%.S@;
% S = /SpecTests/Nat%.S;

@ Sum@ = +(Sum@ S, Unit@ Z);

(Nat@, Sum@){ Sum@; } add = (Nat@ n, Sum@ sum) {
  S@ s = S(n);
  s.?(Z: sum, S: add(s.S, Sum@(S: sum)));
};

# Evaluating f requires O(1) memory, but executing the resulting process
# requires O(N) memory.
(Nat@){ Sum@!; } f = (Nat@ n) {
  !(add(n, Sum@(Z: Unit@())));
};

f;
