
# Test that we can do gdb based debugging of the fble-debug-test binary.

proc require { str } {
  expect {
    $str {}
    timeout {error "timeout waiting for \"$str\"" }
    eof {error "eof waiting for \"$str\"" }
  }
}

eval {
  # Test that we can set a breakpoint at a particular line in a file and run to
  # that breakpoint.
  spawn gdb --quiet ./out/pkgs/misc/fble-debug-test
  expect "(gdb) "

  set STMT_LINE 14
  send "break pkgs/misc/Fble/DebugTest.fble:$STMT_LINE\n"
  require "Breakpoint 1 at"
  require "pkgs/misc/Fble/DebugTest.fble, line $STMT_LINE."
  require "(gdb) "

  send "run\n"
  require "at pkgs/misc/Fble/DebugTest.fble:$STMT_LINE"
  require "(gdb) "
  close
}

eval {
  # Test that we can set a breakpoint at a particular function and run to
  # that breakpoint.
  spawn gdb --quiet ./out/pkgs/misc/fble-debug-test
  expect "(gdb) "

  set LINE 14
  send "break /Fble/DebugTest%.Next!\n"
  require "Breakpoint 1 at"
  require "pkgs/misc/Fble/DebugTest.fble, line $LINE."
  require "(gdb) "

  send "run\n"
  require "at pkgs/misc/Fble/DebugTest.fble:$LINE"
  require "(gdb) "
  close
}

eval {
  # Test that we can print values of local variables
  spawn gdb --quiet ./out/pkgs/misc/fble-debug-test
  expect "(gdb) "

  set LINE 15
  send "break pkgs/misc/Fble/DebugTest.fble:$LINE\n"
  require "Breakpoint 1 at"
  require "pkgs/misc/Fble/DebugTest.fble, line $LINE."
  require "(gdb) "

  send "run\n"
  require "at pkgs/misc/Fble/DebugTest.fble:$LINE"
  require "(gdb) "

  send "info locals\n"
  require "light"
  require "u"
  require "(gdb)"

  # Test that it show the type of the variable as FbleValue*.
  send "print light\n"
  require "(struct FbleValue *)"
  require "(gdb)"

  close
}

exit 0
