<@>% Reverse = /Core/List%.Reverse;
<@>% Init = /Core/List%.Init;
<@>% Last = /Core/List%.Last;
<@>% Drop = /Core/List/Length%.Drop;
<@>% Length = /Core/List/Length%.Length;

<@>@ Maybe@ = /Core/Maybe%.Maybe@;
<@>% Just = /Core/Maybe%.Just;
<@>% Nothing = /Core/Maybe%.Nothing;

