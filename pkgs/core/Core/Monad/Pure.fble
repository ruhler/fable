
<<@>@>@ Monad@ = /Core/Monad%.Monad@;

# Pure@ --
#   An implementation of a pure monad.
<@>@ Pure@ = <@ T@> { T@; };

# Monad --
#   The Monad@ instance for Pure@.
Monad@<Pure@> Monad = @(
  return: <@ A@>(A@ x) { x; },
  do: <@ A@>(Pure@<A@> ma)<@ B@>((A@) { Pure@<B@>; } f) { f(ma); }
);

@(Pure@, Monad);
