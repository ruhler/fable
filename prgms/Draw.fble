@(Unit@: StdLib.Unit@, Nat@: UBNat.UBNat.Nat@) {

  @ Color@ = +(
      Unit@ black,
      Unit@ red,
      Unit@ green,
      Unit@ yellow,
      Unit@ blue,
      Unit@ magenta,
      Unit@ cyan,
      Unit@ white
      );

  @ Draw@ = *(Nat@ x, Nat@ y, Nat@ w, Nat@ h, Color@ color);

  @(Color@, Draw@);
};
