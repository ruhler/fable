
@ Char@ = /Char%.Char@;
% Chars = /Char%.Chars;
@ Int@ = /Int/Int%.Int@;
<@>% Append = /List%.Append;
<@>@ Show@ = /Show%.Show@;
% Str = /String%.Str;

Show@<Int@> Show = (Int@ x) {
  x.?(
    n: Append<Char@>(Str(Chars|'-'), /Int/IntP/Show%.Show(x.n)),
    0: Str(Chars|0),
    p: /Int/IntP/Show%.Show(x.p));
};

@(Show);
