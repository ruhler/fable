
@ Unit@ = /Core/Unit%.Unit@;

@ Command@ = /Fbld/Command%.Command@;

<<@>@ M@> {
  <@>@ MR@ = /Fbld/ResultM%<M@>.MR@;

  # The type of a function to invoke an fbld command.
  #  @arg[Env@][env] - The global environment.
  #  @arg[Command@][command] - The command to invoke.
  #  @returns The result of invoking the command.
  @ Invoke@ = (Env@, Command@) { MR@<Unit@>; },

  # The environment for processing fbld documents.
  @ Env@ = *(Invoke@ inline, Invoke@ block);

  @(Invoke@, Env@);
};
