
% Chars = /Char%.Chars;
% Str = /String%.Str;
@ Test@ = /Test%.Test@;
@ TestResult@ = /Test%.TestResult@;
@ TestSuite@ = /Test%.TestSuite@;
% TestSuite = /Test%.TestSuite;
% Unit = /Unit%.Unit;

# TODO: Test the test runner output. Don't just test that a passing test can
# be written and passes.
TestSuite@ Tests = {
  Test@ pass = Test@(Str(Chars|pass), !(TestResult@(pass: Unit)));
  Test@ _fail = Test@(Str(Chars|fail), !(TestResult@(fail: Str(Chars|FAILED))));

  TestSuite(Chars|'Test', [pass]);
};

@(Tests);
