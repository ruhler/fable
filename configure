#!/usr/bin/tclsh

set srcdir [file dirname [info script]]
set builddir "."

proc subst_in { src dest } {
  puts "creating $dest"
  exec sed \
    -e "s=@srcdir@=$::srcdir=g" \
    -e "s=@builddir@=$::builddir=g" \
    $src > $dest
}

subst_in $::srcdir/config.tcl.in $::builddir/config.tcl
subst_in $::srcdir/build.ninja.in $::builddir/build.ninja

